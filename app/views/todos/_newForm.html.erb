
<% if @todo.errors.any? %>
<div class="alert alert-danger" role="alert">
  <h4 class="alert-heading"><%= pluralize(@todo.errors.count, "error") %> prohibited this todo from being saved:!</h4>
    <ul>
        <% @todo.errors.each do |error| %>
          <li class="mb-0"><%= error.full_message %></li>
        <% end %>
      </ul>
    <hr>
  <p class="mb-0">Please check and give proper inputs.</p>
</div>
    
  <% end %>

<%= form_with(model: @todo) do |form| %>


  <div>
    <%= form.label :title, "Title",{class:"form-label"} %>
    <%= form.text_field :title, {class:"form-control", placeholder:"Todo Title...", required: "true"} %>
  </div>

  <div>
    <%= form.label :description, {class:"form-label"} %>
    <%= form.text_area :description, {class:"form-control", placeholder:"Description...",required: "true"} %>
  </div>

  <div>
    <%= form.label :due_date, {class:"form-label"} %>
    <%= form.datetime_field :due_date ,{class:"form-control", placeholder:"Due Date...",required: "true"} %>
  </div>

  <div>
    <%= form.label :priority, {class:"form-label"} %>
    <%= form.number_field :priority, {class:"form-control", placeholder:"Todo Priority (Range between 1-3)...",required: "true"} %>
  </div>

  <div style="margin-top:20px;"><center>
    <%= form.submit(class: 'btn btn-outline-primary') %>
    </center>
  </div>
<% end %>